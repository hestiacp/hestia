#!/bin/bash
# info: Specifies the ID of a group whose members are authorized to learn process information otherwise prohibited by hidepid. Need for zabbix agent
# options: GID 
# labels: hestia
#
# example: v-add-sys-proc-gid 1234

#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

gid=$1

# Includes

# shellcheck source=/usr/local/hestia/func/main.sh
source $HESTIA/func/main.sh
# shellcheck source=/usr/local/hestia/conf/hestia.conf
source $HESTIA/conf/hestia.conf

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'GID'
is_format_valid 'gid'

# Perform verification if read-only mode is enabled
check_hestia_demo_mode


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

$BIN/v-change-sys-config-value "PROC_GROUP_ID" $gid

# Logging
$BIN/v-log-action "system" "Warning" "System" "Added ID of a group whose members are authorized to learn process information otherwise prohibited by hidepid (GID: $gid)"
log_event "$OK" "$ARGUMENTS"

exit