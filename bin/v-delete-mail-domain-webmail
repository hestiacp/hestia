#!/bin/bash
# info: delete mail domain antivirus support
# options: USER DOMAIN
#
# The function disables clamav scan for incoming emails.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=$2
domain_idn=$2

# Includes
source $HESTIA/func/main.sh
source $HESTIA/func/domain.sh
source $HESTIA/conf/hestia.conf

# Additional argument formatting
format_domain
format_domain_idn
# TODO: $domain_idn not used in this script - maybe $domain should be converted to $doman_idn ?


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '2' "$#" 'USER DOMAIN'
is_format_valid 'user' 'domain'
is_system_enabled "$MAIL_SYSTEM" 'MAIL_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'mail' 'DOMAIN' "$domain"
is_object_unsuspended 'mail' 'DOMAIN' "$domain"
is_object_value_exist 'mail' 'DOMAIN' "$domain" '$ANTIVIRUS'


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Delete webmail configuration files
if [ -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.apache2.conf ]; then
    rm -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.apache2.conf

    sed -i 's|Include '$HOMEDIR'\/'$user'\/conf\/mail\/'$domain'\/webmail\/mail.'$domain'.apache2.conf||g' /etc/apache2/conf.d/hestia.conf


    # Restarting web server
    $BIN/v-restart-web $restart
    check_result $? "Web restart failed" >/dev/null
fi
if [ -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.nginx.conf ]; then
    rm -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.nginx*.conf

    sed -i 's|include '$HOMEDIR'\/'$user'\/conf\/mail\/'$domain'\/webmail\/mail.'$domain'.nginx.conf;||g' /etc/nginx/conf.d/hestia.conf

    # Restarting proxy server
    $BIN/v-restart-proxy $restart
    check_result $? "Proxy restart failed" >/dev/null
fi

# Turn off SSL-enabled webmail
if [ ! -z "$WEB_SYSTEM" ]; then
    # Check if SSL webmail is turned on
    if [ -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.apache2.ssl.conf ]; then
        sed -i 's|Include '$HOMEDIR'\/'$user'\/conf\/mail\/'$domain'\/webmail\/mail.'$domain'.apache2.ssl.conf||g' /etc/apache2/conf.d/hestia.conf
        rm -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.apache2.ssl.conf
       
        # Restart web server
        $BIN/v-restart-web $restart
    fi
fi
if [ ! -z "$PROXY_SYSTEM" ]; then
    if [ -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.nginx.ssl.conf ]; then
        sed -i 's|include '$HOMEDIR'\/'$user'\/conf\/mail\/'$domain'\/webmail\/mail.'$domain'.nginx.ssl.conf;||g' /etc/nginx/conf.d/hestia.conf
        rm -f $HOMEDIR/$user/conf/mail/$domain/webmail/mail.$domain.nginx.ssl.conf
        
        # Restart proxy server
        $BIN/v-restart-web $restart
    fi
fi

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Delete antivirus in config
update_object_value 'mail' 'DOMAIN' "$domain" '$WEBMAIL' 'no'

# Logging
log_history "disabled webmail access for $domain"
log_event "$OK" "$ARGUMENTS"

exit
