#!/bin/bash
# info: update dns templates
# options: [RESTART]
#
# The function for obtaining updated pack of dns templates.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
restart=$1

# Includes
source $HESTIA/func/main.sh
source $HESTIA/conf/hestia.conf

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Update templates
cp -rf $HESTIA/install/hestia-data/templates/dns $HESTIA/data/templates/


#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Clean tmpdir
rm -rf $tmpdir

exit
