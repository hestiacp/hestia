#!/bin/bash
# info: update mail templates
# options: [RESTART]
#
# The function for obtaining updated pack of mail templates.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
restart=$1

# Includes
source $HESTIA/func/main.sh
source $HESTIA/conf/hestia.conf

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Update templates
cp -rf $HESTIA/install/hestia-data/templates/mail $HESTIA/data/templates/

# Rebuild web and mail domains to synchronize webmail config
for user in $($BIN/v-list-sys-users plain); do
    $BIN/v-rebuild-web-domains $user no
    $BIN/v-rebuild-mail-domains $user no
done


#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Clean tmpdir
rm -rf $tmpdir

exit
