#!/usr/bin/env bash
# info: delete plugin
# options: PLUGIN_NAME
#
# example: v-delete-plugin pluginname

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

plugin_name="$1"

# shellcheck source=/etc/hestiacp/hestia.conf
source /etc/hestiacp/hestia.conf
# shellcheck source=/usr/local/hestia/func/main.sh
source $HESTIA/func/main.sh
# shellcheck source=/usr/local/hestia/func/plugins.sh
source $HESTIA/func/plugins.sh
# load config file
source_conf "$HESTIA/conf/hestia.conf"

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'PLUGIN_NAME'

init_plugins_conf_if_not_exists

plugin_name="$(echo "$plugin_name" | awk '{gsub(/^[ \t]+| [ \t]+$/,""); print $0 }')"
plugin_path="$HESTIA/plugins/$plugin_name"

if [[ ! -d "$plugin_path" ]]; then
	check_result "$E_INVALID" "Plugin \"$plugin_name\" is not installed"
fi

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Disable plugin to remove from hestia
$HESTIA/bin/v-disable-plugin "$plugin_name"

# Check pre_uninstall hook
if [[ -f "$HESTIA/plugins/$plugin_name/hook/pre_uninstall" ]]; then
    bash "$HESTIA/plugins/$plugin_name/hook/pre_uninstall"
fi

# Remove plugin files
if [[ -L "$plugin_path" ]]; then
    unlink "$plugin_path"
else
    rm -rf "$plugin_path"
fi

# Remove plugin from hestia plugins list
delete_json_index "$plugin_name" "$HESTIA/conf/plugins.json"

# Logging
log_history "Plugin $plugin_name deleted" "Info" "admin" "Plugin"
log_event "$OK" "$ARGUMENTS"

exit
