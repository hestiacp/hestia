#!/bin/bash
# info: Add mail domain smarthost support
# options: USER DOMAIN HOST USERNAME PASSWORD [PORT]
# labels: mail
#
# example: v-add-mail-domain-smarthost user domain.tld srv.smarthost.tld uname123 pass12345
#
# This function adds mail domain smarthost support.

#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=$2
host=$3
username=$4
password=$5
port=${6-587}

# Includes
source $HESTIA/func/main.sh
source $HESTIA/conf/hestia.conf

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '5' "$#" 'USER DOMAIN HOST USERNAME PASSWORD'
is_format_valid 'port' 'user' 'domain'
is_system_enabled "$MAIL_SYSTEM" 'MAIL_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'mail' 'DOMAIN' "$domain"
is_object_unsuspended 'mail' 'DOMAIN' "$domain"

# Perform verification if read-only mode is enabled
check_hestia_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

cat >/etc/exim4/domains/${domain}/smarthost.conf << EOL
host:$host
port:$port
user:$username
pass:$password
EOL

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Adding smarthost values in config
add_object_key 'mail' 'DOMAIN' "$domain" 'U_SMARTHOST' 'ACCOUNTS'
add_object_key 'mail' 'DOMAIN' "$domain" 'U_SMARTHOST_HOST' 'ACCOUNTS'
add_object_key 'mail' 'DOMAIN' "$domain" 'U_SMARTHOST_PORT' 'ACCOUNTS'
add_object_key 'mail' 'DOMAIN' "$domain" 'U_SMARTHOST_USERNAME' 'ACCOUNTS'

update_object_value 'mail' 'DOMAIN' "$domain" '$U_SMARTHOST' 'yes'
update_object_value 'mail' 'DOMAIN' "$domain" '$U_SMARTHOST_HOST' "$host"
update_object_value 'mail' 'DOMAIN' "$domain" '$U_SMARTHOST_PORT' "$port"
update_object_value 'mail' 'DOMAIN' "$domain" '$U_SMARTHOST_USERNAME' "$username"

# Logging
log_history "Added domain smarthost support for $domain"
log_event "$OK" "$ARGUMENTS"

exit
