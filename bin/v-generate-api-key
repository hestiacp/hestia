#!/bin/bash
# info: generate api key
# options: [USER] [SCRIPTS] [FORMAT]
#
# example: v-generate-api-key admin v-purge-nginx-cache,v-list-mail-accounts json
#
# This function creates a key file in $HESTIA/data/keys/

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
#user=$1
user=${1:-admin}
scripts=$2
format=${3-shell}

# Includes
# shellcheck source=/etc/hestiacp/hestia.conf
source /etc/hestiacp/hestia.conf
# shellcheck source=/usr/local/hestia/func/main.sh
source $HESTIA/func/main.sh
# load config file
source_conf "$HESTIA/conf/hestia.conf"

keygen() {
    < /dev/urandom tr -dc _A-Z-a-z-0-9 | head -c 32; echo;
}
HASH=$(keygen)

# Perform verification if read-only mode is enabled
check_hestia_demo_mode

# Remove whitespace and bin path from scripts
scripts="$(cleanup_api_scripts "$scripts")"

time_n_date=$(date +'%T %F')
time=$(echo "$time_n_date" |cut -f 1 -d \ )
date=$(echo "$time_n_date" |cut -f 2 -d \ )

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

#check_args '1' "$#" 'USER [SCRIPTS] [FORMAT]'
is_format_valid 'user'
is_object_valid 'user' 'USER' "$user"
is_api_script_format_valid "$scripts" "$user"

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -d "$HESTIA/data/keys/" ]; then
    mkdir -p $HESTIA/data/keys/
    chown admin:root $HESTIA/data/keys/
    chmod 750 $HESTIA/data/keys/
fi

if [[ -e "$HESTIA/data/keys/$HASH" ]]; then
    while [[ -e "$HESTIA/data/keys/$HASH" ]]; do
        HASH=$(keygen)
    done
fi

echo "USER='$user'" >$HESTIA/data/keys/$HASH
echo "SCRIPTS='$scripts'" >>$HESTIA/data/keys/$HASH
echo "TIME='$time'" >>$HESTIA/data/keys/$HASH
echo "DATE='$date'" >>$HESTIA/data/keys/$HASH

$BIN/v-check-api-key "$HASH" "127.0.0.1" "$format"

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Logging
$BIN/v-log-action "system" "Warning" "System" "New system API key generated (Key: ${HASH})."

exit
